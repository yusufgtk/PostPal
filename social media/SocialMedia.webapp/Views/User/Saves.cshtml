@model List<SaveModel>

@{
    ViewData["Title"] = "Kaydedilenler";
}

<div class="my-5">
    <div class="mb-4">
        <h1 class="text-center text-dark">Kaydedilenler</h1>
    </div>
    <div class="border border-bottom border-dark mb-5"></div>
    <div>
        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4 p-1" style="max-height: 300px; min-height: 200px;">
                    <a asp-controller="Home" asp-action="PostDetails" asp-route-postId="@item.Id">
                        <div class="m-0" style="width: 100%; height: 100%; overflow: hidden;">
                            <img src="~/postImages/@item.ImageUrl" style="width: 100%; height: 100%; object-fit: cover;" alt="">
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>