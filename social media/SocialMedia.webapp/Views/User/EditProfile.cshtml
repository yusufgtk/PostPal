@model ProfileModel
@{
    ViewData["Title"] = "Profil Düzenle";
}

<div class="my-5">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <div class="card border-secondary mb-3" style="width: 25rem;">
                <div class="card-header text-center">Profili Düzenle</div>
                <div class="card-body text-secondary">
                    
                    <form asp-controller="User" asp-action="EditProfile" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="userId" value="@Model.UserId">
                        <div class="row my-3">
                            <div class="col-12 d-flex justify-content-center">
                                <div style="width: 200px; height: 200px">
                                    <img src="~/userImages/@(Model.UserName).jpeg" alt="" class="rounded-circle " width="200px" height="200px">
                                </div>

                            </div>
                            <div class="mb-3">
                                <label for="formFile" class="form-label">Profil Resmi Seç</label>
                                <input class="form-control" name="file" type="file" id="formFile" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="UserName" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Bio">Bio</label>
                            <textarea class="form-control" asp-for="Bio" style="height: 150px" maxlength="150"></textarea>
                        </div>
                        <button class="btn btn-outline-dark">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>