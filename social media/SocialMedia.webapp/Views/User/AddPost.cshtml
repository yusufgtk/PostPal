@model AddPostModel
@{
    ViewData["Title"] = "Post Paylaş";
}

<div class="my-5 container">
    <div>
        <div class="row">
            <div class="col-lg-12 col-md-9 col-sm-6 d-flex justify-content-center">
                <form asp-controller="User" asp-action="AddPost" method="post" enctype="multipart/form-data">
                    <div class="card text-bg-dark mb-3 border border-5 border-dark" style="max-width: 30rem;">
                        <div class="card-header">Post Ekle</div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <input type="file" class="form-control" name="file" required>
                                <label class="input-group-text" for="inputGroupFile02">Resim Yükle</label>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Content" class="form-label">Açıklama</label>
                                <input class="form-control" asp-for="Content">
                                <span asp-validation-for="Content"></span>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox"  asp-for="IsCommentOpen">
                                <label class="form-check-label" asp-for="IsCommentOpen">
                                    Yorumları Kapat
                                </label>
                            </div>
                            <div>
                                <button class="btn btn-outline-dark">Paylaş</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>