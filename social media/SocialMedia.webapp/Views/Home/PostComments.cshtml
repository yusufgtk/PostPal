@model List<CommentModel1>
@{
    ViewData["Title"] = "Postu BeÄŸenenler";
}

<div class="my-5">
    <div class="mb-5">
        <h1 class="text-center text-dark">Yorum Yapanlar</h1>
    </div>
    <div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                    <ul class="list-group p-2 p-lg-5 p-xl-5 border border-2 border-dark w-75 w-lg-50 w-xl-50 shadow-lg bg-dark">
                    @if(Model.Count()>0)
                    {
                        @foreach(var c in Model)
                        {
                            <li class="list-group-item border border-2 border-dark mb-2 rounded-4">
                                <a asp-controller="User" asp-action="Profile" asp-route-userId="@c.UserId" class="text-decoration-none text-dark">
                                    <div class="d-flex">
                                        <div class="d-inline me-2">
                                            <img src="~/userImages/@(c.UserName).jpeg" alt="" width="50px" class="rounded-circle">
                                        </div>
                                        <div class="d-inlne pt-2">
                                            <span>@c.UserName</span>
                                        </div>
                                    </div>
                                </a>
                                <div class="border-top mt-2">
                                    <p class="mt-2">@c.Content</p>
                                </div>
                            </li>
                        }
                    }else{

                        <li>
                            <div class="alert alert-dark" role="alert">
                                Yorum yok ilk sen yorum yap!
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>