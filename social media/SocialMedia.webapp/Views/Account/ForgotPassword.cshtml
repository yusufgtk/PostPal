
@{
    Layout="_Layout2";
    ViewData["title"]="Şifremi Unuttum";
    var Alert = TempData["Alert"];
}

<div class="my-5">
    @if(TempData["Message"]!=null)
    {
        <div class="alert @Alert" role="alert">
            @TempData["Message"]
        </div>
    }
    
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <div class="card text-bg-dark mb-3" style="max-width: 25rem;">
                <div class="card-header text-center">Yeni Şifre Gönder</div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="ForgotPassword" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input class="form-control" name="Email">
                        </div>
                        <div class="float-end">
                            <button class="btn btn-outline-dark" type="submit">Gönder</button>
                        </div>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-warning" type="submit"><i class="fa-solid fa-chevron-left me-2"></i><span>Geri</span></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>