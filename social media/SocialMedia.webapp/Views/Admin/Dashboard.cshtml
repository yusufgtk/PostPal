@model DashboardModel

@{
    Layout="_Layout3";
    ViewData["title"] = "Admin Paneli";
}

<div class="my-5">
    <div class="row">
        <div class="col-12 mb-3">
            <div class="w-100">
                <div class="row bg-dark rounded-3 p-3 mx-1">
                    <div class="col-lg-1 col-md-1 col-sm-1">
                        <div class="w-100 float-end mb-xs-3 mb-sm-3 mb-md-3">
                            <img src="~/adminImages/@Model.ImageUrl" alt="" width="100%" height="100%" class="border border-2 rounded-circle">
                        </div>
                    </div>
                    <div class="col-lg-11 col-md-11 col-sm-11 d-flex align-items-center">
                        <div>
                            <span class="text-white">Kullanıcı Adı : @Model.UserName</span>
                        </div>
                        <div class="mx-3">
                            <span class="text-white">/</span>
                        </div>
                        <div>
                            @foreach(var item in Model.Roles)
                            {
                                <span class="text-white">Rol : @item</span>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
            <div class="rounded-3 w-100 bg-primary p-3">
                <h4 class="h4 text-center text-white">Toplam Kullanıcı Sayısı</h4>
                <br>
                <div class="d-flex justify-content-center mb-3">
                    <div class="text-white">
                        <i class="fa-solid fa-users fa-lg me-3"></i><span>@Model.NumberOfUsers</span>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div>
                        <a asp-controller="Admin" asp-action="UserList" class="text-decoration-none btn btn-primary"><span class="me-2">Kullanıcılara Git</span><i class="fa-solid fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
        @**@
        <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
            <div class="rounded-3 w-100 bg-warning p-3">
                <h4 class="h4 text-center text-white">Mavi Tik Başvuru Adeti</h4>
                <br>
                <div class="d-flex justify-content-center mb-3">
                    <div class="text-white">
                        <i class="fa-solid fa-folder fa-lg me-3"></i><span>@Model.NumberOfBlueTickApplications</span>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div>
                        <a asp-controller="Admin" asp-action="ApplicationList" class="text-decoration-none btn btn-warning text-white"><span class="me-2">Başvurulara Git</span><i class="fa-solid fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
        @**@
        <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
            <div class="rounded-3 w-100 bg-danger p-3">
                <h4 class="h4 text-center text-white">Toplam Şikayet Sayısı</h4>
                    <br>
                    <div class="d-flex justify-content-center mb-3">
                        <div class="text-white">
                            <i class="fa-solid fa-triangle-exclamation fa-lg me-3"></i><span>@Model.NumberOfComplaints</span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div>
                            <a asp-controller="Admin" asp-action="ComplaintList" class="text-decoration-none btn btn-danger"><span class="me-2">Şikayetlere Git</span><i class="fa-solid fa-chevron-right"></i></a>
                        </div>
                    </div>
                
            </div>
        </div>
        @**@
        <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
            <div class="rounded-3 w-100 bg-success p-3">
                <h4 class="h4 text-center text-white">Toplam Geri Bildirim Sayısı</h4>
                    <br>
                    <div class="d-flex justify-content-center mb-3">
                        <div class="text-white">
                            <i class="fa-solid fa-hand-holding-medical fa-lg me-3"></i></i><span>@Model.NumberOfFeedbacks</span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div>
                            <a asp-controller="Admin" asp-action="FeedbackList" class="text-decoration-none btn btn-success"><span class="me-2">Geri Bildirimlere Git</span><i class="fa-solid fa-chevron-right"></i></a>
                        </div>
                    </div>
                
            </div>
        </div>
    </div>
</div>